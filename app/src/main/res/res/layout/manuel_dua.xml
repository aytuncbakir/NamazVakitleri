<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manlay"
    android:orientation="vertical"
    tools:context="com.sivamalabrothersgmail.cevher.Manueldua">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@drawable/tesbih_buton"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrlmanudua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always">


            <EditText
                android:id="@+id/manudua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:ems="10"
                android:focusable="true"
                android:gravity="center"
                android:hint="Dua giriniz."
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:orientation="vertical">

        <EditText
            android:id="@+id/manadet"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/tesbih_buton"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:hint="Adet giriniz."
            android:inputType="number"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/manyenile"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/tesbih_buton"
                android:isScrollContainer="false"
                android:onClick="onClick"
                android:text="@string/yenile"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

            <Button
                android:id="@+id/kaydet"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/tesbih_buton"
                android:isScrollContainer="false"
                android:onClick="onClick"
                android:text="@string/kaydet"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linearLayout1"
        android:id="@+id/relativeLayout">

    <Button
        android:id="@+id/manueldua"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buton_selektor"
        android:isScrollContainer="false"
        android:onClick="onClick"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/manuadet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/manueldua"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/buton_normal"
        android:gravity="center_vertical|center_horizontal"
        android:isScrollContainer="false"
        android:text="0"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/manueldua2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buton_selektor"
        android:isScrollContainer="false"
        android:onClick="onClick"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <Button
        android:id="@+id/manueldua1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buton_selektor"
        android:isScrollContainer="false"
        android:onClick="onClick"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    </RelativeLayout>
</RelativeLayout>