<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tsblay"
    android:orientation="vertical"
    tools:context="com.sivamalabrothersgmail.cevher.Tesbih">

    <Button
        android:id="@+id/tesbih"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buton_selektor"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/sub"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/elh"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/elh"
        android:layout_marginTop="15dp"
        android:background="@drawable/tesbih_buton"
        android:gravity="center"
        android:text="Sübhanallah"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/elh"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/tesbih_buton"
        android:gravity="center"
        android:text="Elhamdülillah"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/alh"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/elh"
        android:layout_alignStart="@+id/elh"
        android:layout_below="@+id/elh"
        android:layout_marginTop="45dp"
        android:background="@drawable/tesbih_buton"
        android:gravity="center"
        android:text="Allahüekber"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <Button
        android:id="@+id/yenile"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tesbih"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:background="@drawable/tesbih_buton"
        android:text="@string/yenile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/tesbih1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/yenile"
        android:background="@drawable/buton_selektor"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <Button
        android:id="@+id/tesbih2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/yenile"
        android:background="@drawable/buton_selektor"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />


</RelativeLayout>